@page "{SelectedProperty?}"
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    
    <h1>Properties</h1>
    <form method="post">
        <select name="selectedProp">
            <option selected disabled>Select property</option>
            @foreach (var prop in Model.propertyNames)
            {
                <option value=@prop>@prop</option>
            }
        </select>
        <input type="submit" value="Search"/>
    </form>

    <div class="card-deck">
        @foreach (var photo in Model.photoPaths)
            {
                <div class="card m-3" style="min-width: 18rem; max-width: 30%">
                    <div class="card-header">
                        <p>@photo.Split('/')[3]</p>
                    </div>
                    <img class="card-img-top img-thumbnail" src=@photo style="width: 100%; height: 50%"/>
                </div>
            }
        
       
    </div>

    <div class="align-bottom">Selected property: @Model.SelectedProperty</div>
    <div class="align-bottom">Count: @Model.photoPaths.Count</div>

</div>
